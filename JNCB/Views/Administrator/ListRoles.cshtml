@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "All Roles";
}



<h1>All Roles</h1>

<a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole"
   asp-controller="administrator">Add New Role</a>
@if (Model.Any())
{
    foreach (var role in Model)
    {

        <div class="card mb-3">
            <div class=" card-header">
                Role Id: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-controller="Administrator" asp-action="EditRole" asp-route-id="@role.Id">Edit</a>
                <a asp-action="DeleteRole" asp-route-id="@role.Id" method="post" class="btn btn-primary">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No Roles Created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use The Button Below to create a role
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-action="CreateRole" asp-controller="administrator">
                Create Role
            </a>
        </div>
    </div>

}