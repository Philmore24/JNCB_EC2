@model IEnumerable<Transaction>

@{
    ViewData["Title"] = "Index";
}

<h1>All Your Transactions</h1>

<p>Your Account Balance is:<strong> $@TempData["Balance"]</strong></p>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    View Your Details
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Your Account Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <span>Username/Email:</span><h5 class="card-title">@ViewBag.username</h5>
                <span>First Name:</span><h5 class="card-title">@ViewBag.firstName</h5>
                <span>Last Name:</span><h5 class="card-title">@ViewBag.lastName</h5>
                <span>Address:</span><h5 class="card-title">@ViewBag.address</h5>
                <span>Account Number:</span><h5 class="card-title">@ViewBag.accountNum</h5>
                <span>Card Number: </span><h5 class="card-title">@ViewBag.card</h5>
                <span>Balance: $</span><h5 class="card-title">@TempData["Balance"]</h5>
                <span>Type:</span><h5 class="card-title">@ViewBag.type</h5>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<br />





<table class="table table-bordered table-hover table-light ">
    <thead class="bg-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.transactionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.receivingAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.remarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.senderAccount)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>


        @foreach (var item in Model)
        {
            @if (item.userID == Convert.ToString(TempData["USERID"]))
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.transactionDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.receivingAccount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.remarks)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.senderAccount)
                    </td>
                    <td>

                        <a asp-action="Details" asp-route-id="@item.id">Details</a>

                    </td>
                </tr>
            }

        }

    </tbody>


</table>

@if (Model.Any() == false)
{
    <span>No transaction found</span>
}