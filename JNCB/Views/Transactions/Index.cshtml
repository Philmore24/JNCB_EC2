@model IEnumerable<JNCB.Models.Transaction>

@{
    ViewData["Title"] = "All Transactions";
}

<h1>Customer Transactions</h1>


<p>
    <a asp-action="Create" class="btn btn-primary mb-3" style="width:auto">Create New</a>
</p>

<table class="table table-bordered table-hover table-light white-space: nowrap;">
        <thead class="bg-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.transactionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.receivingAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.remarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.senderAccount)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.transactionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.receivingAccount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.remarks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.senderAccount)
                </td>


                <td>
                    @*<a asp-action="Edit" class="btn btn-info" asp-route-id="@item.id">Edit</a> |
                        <a asp-action="Details" class="btn btn-success" asp-route-id="@item.id">Details</a> |
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.id">Delete</a>*@
                    <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                    <a class="Det" asp-action="Details" asp-route-id="@item.id">Details</a> |
                    <a class="Del" asp-action="Delete" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Any() == false)
{
    <span>No transaction found</span>
}
